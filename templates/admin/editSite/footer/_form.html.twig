{{ form_start(form) }}
{{ form_errors(form) }}
<div class="row mt-5 d-flex justify-content-center">
    <div class="card mb-3 text-center col-6 bg-dark" style="max-width: 50rem;">
        <div class="card-header">Footer</div>
        <div class="card-body">

                <div class="row mb-4">
                <div class="col">
                <div class="form-outline form-white">
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                    <label class="form-label" for="footer_adresse">Adresse</label>
                </div>
                </div>
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4 form-white">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    <label class="form-label" for="footer_email">Email</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4 form-white">
                    {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
                    <label class="form-label" for="footer_tel">Tel</label>
            </div>

            <button class="btn btn-block btn-primary">{{ button_label|default('Save') }}</button>


        </div>
    </div>
</div>
{{ form_end(form) }}
